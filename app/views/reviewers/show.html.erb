<!-- Page wrapper -->
<div class="flex flex-col min-h-screen overflow-hidden">
  <%= render 'shared/header' %>

  <main class="grow">
    <section class="relative">
      <div class="max-w-6xl mx-auto px-4 pt-20 flex flex-row justify-between">
        <div>
          <h2 class="h2"><%= @reviewer.name %></h2>
          <footer class="text-sm text-slate-500"><%= @reviewer.platform.capitalize %></footer>
        </div>
        <div>
          <h5 class="h5"><%= $pageTitleMap[@reviewer.category.to_sym] %> Reviewer</h5>
        </div>
      </div>
    </section>
    <section class="relative">
      <div class="max-w-6xl mx-auto my-8 px-4 py-4 bg-white">
        <%= form_with(model: @review, url: reviewer_path(@reviewer) + '/reviews') do |form| %>
          <label>Leave your Review</label>
          <div class="grid grid-cols-2 py-4">
            <!-- Left side -->
            <div>
              <div class="mt-2">
                <label class="block text-gray-700 text-sm font-bold" for="review_name">
                  Name
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="review_name" type="text" placeholder="Name" name="review[commenter]">
              </div>
              <div class="mt-2">
                <label class="block text-gray-700 text-sm font-bold" for="review_body">
                  Review
                </label>
                <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="review_body" type="text" placeholder="Your thoughts..." rows="4" name="review[body]">
                </textarea>
              </div>
            </div>

            <!-- Right side -->
            <div class="mx-8">
              <h5 class="h5">Please rate <%= @reviewer.name %> based on any of these aspects</h5>
              <div class="flex flex-col">
                <div class="flex flex-row items-center">
                  <label for="usability-rate" class="text-md font-light basis-1/4">Usability</label>
                  <div class="flex flex-row justify-evenly grow items-baseline basis-3/4">
                    <button><p class="text-xl text-slate-300">No</p></button>
                    <div class="flex flex-row items-baseline">
                      <%= form.number_field :usability, in: 1..5, step: 1 %>
                      <!-- <button><p class="text-3xl font-semibold text-slate-800">&lt;</p></button>
                      <p class="text-3xl text-slate-800 mx-2">3</p>
                      <button><p class="text-3xl font-semibold text-slate-800">&gt;</p></button> -->
                    </div>
                  </div>
                </div>
                <div class="flex flex-row items-center">
                  <label for="entertainment-rate" class="text-md font-light basis-1/4">Entertainment Value</label>
                  <div class="flex flex-row justify-evenly grow items-baseline basis-3/4">
                    <button><p class="text-xl text-slate-300">No</p></button>
                    <div class="flex flex-row items-baseline">
                      <%= form.number_field :entertainment, in: 1..5, step: 1 %>
                      <!-- <button><p class="text-3xl font-semibold text-slate-800">&lt;</p></button>
                      <p class="text-3xl text-slate-800 mx-2">3</p>
                      <button><p class="text-3xl font-semibold text-slate-800">&gt;</p></button> -->
                    </div>
                  </div>
                </div>
                <div class="flex flex-row items-center">
                  <label for="wellwritten-rate" class="text-md font-light basis-1/4">Well Written</label>
                  <div class="flex flex-row justify-evenly grow items-baseline basis-3/4">
                    <button><p class="text-xl font-semibold text-slate-800">No</p></button>
                    <div class="flex flex-row items-baseline">
                      <%= form.number_field :wellwritten, in: 1..5, step: 1 %>
                      <!-- <button><p class="text-3xl text-slate-300">&lt;</p></button>
                      <p class="text-3xl text-slate-300 mx-2">3</p>
                      <button><p class="text-3xl text-slate-300">&gt;</p></button> -->
                    </div>
                  </div>
                </div>
                <div class="flex flex-row items-center">
                  <label for="usefulness-rate" class="text-md font-light basis-1/4">Usefulness</label>
                  <div class="flex flex-row justify-evenly grow items-baseline basis-3/4">
                    <button><p class="text-xl font-semibold text-slate-800">No</p></button>
                    <div class="flex flex-row items-baseline">
                      <%= form.number_field :useful, in: 1..5, step: 1 %>
                      <!-- <button><p class="text-3xl text-slate-300">&lt;</p></button>
                      <p class="text-3xl text-slate-300 mx-2">3</p>
                      <button><p class="text-3xl text-slate-300">&gt;</p></button> -->
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- <button class="btn bg-sky-700 text-white py-2 rounded-md">Submit</button> -->
          <%= form.submit %>
        <% end %>
      </div>
    </section>

    <!-- Reviews -->
    <section class="relative">
      <div class="max-w-6xl mx-auto px-4 py-20 flex flex-col justify-between">
        <h3 class="h3 text-slate-700 mb-4">Reviews (<%= @reviewer.numOfCritics %>)</h3>
        <% if @reviewer.numOfCritics == 0 %>
          <p class="text-md text-slate-700">No one has left a review yet.</p>
        <% else %>
          <div class="grid grid-cols-2 gap-4">
            <% @reviewer.reviews.each do |review| %>
            <!-- Review card -->
              <%= render "review", review: review %>
            <% end %>
          </div>
        <% end %>
      </div>
    </section>
  </main>
  <!-- Site footer -->
  <%= render 'shared/footer' %>
</div>