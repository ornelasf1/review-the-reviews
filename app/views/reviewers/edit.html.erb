<!-- Page wrapper -->
<div class="flex flex-col min-h-screen overflow-hidden">
  <%= render 'shared/header', theme: 'dark' %>

  <main class="grow">
    <section class="relative">
      <div class="max-w-6xl mx-auto px-4 pt-20 mb-4">
        <h3 class="h3 text-slate-700">Editting reviewer: <%= @reviewer.name %></h3>
        <%= render 'form', reviewer: @reviewer %>
      </div>
    </section>
  </main>
  <!-- Site footer -->
  <%= render 'shared/footer' %>
</div>