<!-- Page wrapper -->
<div class="flex flex-col min-h-screen overflow-hidden">

    <%= render 'shared/header', theme: 'dark' %>

        <!-- Hero -->
        <section class="relative">

            <!-- Dark background -->
            <div class="absolute inset-0 bg-slate-900 pointer-events-none -z-10" aria-hidden="true"></div>

            <div class="relative max-w-6xl mx-auto px-4 pb-10 pt-20">
                <%= render 'shared/search_form' %>
            </div>
        </section>

        <section class="relative">
          <div class="max-w-6xl mx-auto px-4">
            <p class="text-lg text-slate-700 my-4">Publishers that have reviewed <span class="font-semibold"><%= params[:query] %></span></p>
            <%= render 'reviewers/list', reviewers: @reviewers %>
          </div>
        </section>

    </main>


    <!-- Site footer -->
    <%= render 'shared/footer' %>

</div>
<script>
addEventListener("turbo:submit-start", ({ target }) => {
    const btn = document.querySelector('input[type="submit"]');
    btn.disabled = true;
})
addEventListener("turbo:submit-end", ({ target }) => {
    const btn = document.querySelector('input[type="submit"]');
    btn.disabled = false;
})
</script>