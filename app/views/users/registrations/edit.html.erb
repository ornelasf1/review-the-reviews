<%= render 'shared/header' %>
<main class="flex">
  <div class="min-h-screen w-full h-full flex flex-col justify-center">

    <div class="px-5 sm:px-6">
      <div class="w-full max-w-md mx-auto">
        <h4 class="h4 text-slate-800">Update your account</h4>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'space-y-2' }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.fields_for :profile do |pf| %>
                <div>
                  <%= pf.label 'Display Name', class: "text-sm font-medium" %>
                  <%= pf.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'What should we call you?', class: "form-input py-2 w-full" %>
                </div>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :email, class: "text-sm font-medium" %><br />
            <%= f.email_field :email, autocomplete: "email", class: "form-input py-2 w-full" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <%= f.label 'New Password', class: "text-sm font-medium" %> <i class="text-xs">(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-input py-2 w-full" %>
            <% if @minimum_password_length %>
              <br />
              <em class="text-xs"><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="actions">
            <%= f.submit "Update", class: 'btn cursor-pointer bg-sky-700 text-white py-2' %>
          </div>
        <% end %>
        <div class='h-[1px] bg-slate-200 w-full my-4'></div>
        <%= button_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn py-2 bg-red-600 rounded-sm text-white' %>
        <div class='h-[1px] bg-slate-200 w-full my-4'></div>
        <%= link_to "Back", :back, class: 'text-center mt-5 text-blue-600 hover:underline' %>
      </div>
    </div>
  </div>
</main>
