<section class="relative">
    <div class="max-w-6xl mx-auto px-4 pb-20 flex flex-col justify-between">
        <h3 class="h3 text-slate-700 mb-4">Reviews <span class="font-light text-xl">(<%= @reviewer.numOfCritics %>)</span></h3>
        <% if @reviewer.numOfCritics == 0 %>
            <div class="grid grid-cols-2 gap-4" do %>
                <p class="text-md text-slate-700">No one has left a review yet.</p>
            </div>
        <% else %>
                <div class="grid grid-cols-2 gap-4">
                    <div class="flex flex-col space-y-4">
                        <% @reviews.reject.each_with_index {|review, idx| idx % 2 == 1 }.each do |review| %>
                            <!-- Review card -->
                            <%= render "reviews/review", review: review %>
                        <% end %>
                    </div>
                    <div class="flex flex-col space-y-4">
                        <% @reviews.reject.each_with_index {|review, idx| idx % 2 == 0 }.each do |review| %>
                            <!-- Review card -->
                            <%= render "reviews/review", review: review %>
                        <% end %>
                    </div>
                </div>
                <%= paginate reviews %>
        <% end %>
    </div>
</section>